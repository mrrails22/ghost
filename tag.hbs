{{!< default}}
{{! The tag above means - insert everything in this file into the {body} of the default.hbs template }}

{{! The main content area on the tag page }}
<main class="site-main">
    <section class="inner">

        <div class="site-content fadeInDown delay_075s">
            <header class="page-header">
                <h1 class="page-title">All posts in <span class="highlight">“{{tag.name}}”</span></h1>
            </header><!-- .page-header -->
            {{! The tag below includes the post loop - partials/loop.hbs }}
            {{> "loop"}}
        </div><!-- .site-content -->

        {{! The tag below includes the theme sidebar - partials/sidebar.hbs }}
        {{> sidebar}}

    </section><!-- .inner -->
</main><!-- .site-main -->
