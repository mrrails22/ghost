{{!< default}}
{{! The tag above means - insert everything in this file into the {body} of the default.hbs template }}

<main class="site-main">
    <div class="inner">

        <div class="site-content fadeInDown delay_075s">
            {{! Everything inside the #post tags pulls data from the post }}
            {{#post}}
            <article class="{{post_class}}">
                <header class="entry-header">    
                    <div class="entry-header-wrap">
                        {{#if image }}
                        <div class="post-thumbnail"><img src="{{image}}" alt="{{title}}"></div>
                        {{/if}}
                        <h1 class="entry-title">{{title}}</h1>
                    </div>
                    <div class="entry-meta">
                        {{#if featured}}<span class="featured-post icon-star" aria-hidden="true"></span>{{/if}}
                        by <span class="post-author">{{author}}</span> on <time class="published" datetime="{{date format='YYYY-MM-DD'}}">{{date format="MMMM DD, YYYY"}}</time>
                    </div><!-- .entry-meta -->
                </header><!-- .entry-header -->
                <div class="entry-content">
                    {{content}}
                </div><!-- .entry-content -->
                <footer class="entry-footer">
                    <div class="share-post">
                        <span>Share</span>
                        <a class="icon-twitter fill-horizontal" target="_blank" href="http://twitter.com/share?text={{encode title}}&amp;url={{url absolute="true"}}"><span class="screen-reader-text">Twitter</span></a>
                        <a class="icon-facebook fill-horizontal" target="_blank" href="http://wwww.facebook.com/sharer.php?u={{url absolute="true"}}"><span class="screen-reader-text">Facebook</span></a>
                        <a class="icon-google fill-horizontal" target="_blank" href="http://plus.google.com/share?url={{url absolute="true"}}"><span class="screen-reader-text">Google+</span></a>
                    </div>
                    {{#if tags}}
                    <div class="tag-links">Tags: {{tags separator=""}}</div>
                    {{/if}}
                </footer><!-- .entry-footer -->
            </article><!-- .post -->

            {{#author}}
            <div class="author-box">
                <div class="author-info">
                    {{#if image}}
                    <div class="author-image">
                        <a class="author-avatar" href="{{@blog.url}}/author/{{slug}}" style="background-image: url({{image}})"><span class="screen-reader-text">{{name}}'s Picture</span></a>
                    </div>
                    {{/if}}
                    <div class="author-details">
                        <h4 class="author-title">About <a href="{{url}}">{{name}}</a></h4>
                        {{#if bio}}
                        <p class="author-bio">{{bio}}</p>
                        {{/if}}
                        {{#if location}}
                        <span class="author-location"><i class="icon-map-marker" aria-hidden="true"></i> {{location}}</span>
                        {{/if}}
                        {{#if website}}
                        <span class="author-website"><i class="icon-chain" aria-hidden="true"></i> <a href="{{website}}" target="_blank">{{website}}</a></span>
                        {{/if}}
                    </div>
                </div><!-- .author-info -->
            </div><!-- .author-box -->
            {{/author}}

            {{! Previous/next post links }}
            <nav class="post-navigation">
                <h2 class="screen-reader-text">Post navigation</h2>
                {{#next_post}}
                <div class="nav-next">
                    <div class="nav-inside">
                        {{#if image}}
                        <a href="{{url}}" class="nav-thumb" style="background-image: url({{image}})"></a>
                        {{/if}}
                        <div class="nav-before">Next</div>
                        <h4 class="nav-title"><a href="{{url}}">{{title}}</a></h4>
                        <div class="nav-date">{{date format="MMMM DD, YYYY"}}</div>
                    </div>
                </div>
                {{/next_post}}
                {{#prev_post}}
                <div class="nav-previous">
                    <div class="nav-inside">
                        {{#if image}}
                        <a href="{{url}}" class="nav-thumb" style="background-image: url({{image}})"></a>
                        {{/if}}
                        <div class="nav-before">Previous</div>
                        <h4 class="nav-title"><a href="{{url}}">{{title}}</a></h4>
                        <div class="nav-date">{{date format="MMMM DD, YYYY"}}</div>
                    </div>
                </div>
                {{/prev_post}}
            </nav><!-- .post-navigation -->

            {{! The tag below includes the theme comments - partials/comments.hbs }}
            {{> comments}}
            
            {{/post}}
        </div><!-- .site-content -->

        {{! The tag below includes the theme sidebar - partials/sidebar.hbs }}
        {{> sidebar}}

    </div><!-- .inner -->
</main><!-- .site-main -->
